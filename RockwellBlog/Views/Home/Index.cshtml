@model IEnumerable<Blog>
@using RockwellBlog.Services
@inject IBlogImageService _blogImageService
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center mb-5">
    <h3>FEATURED POSTS</h3>
</div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="card mb-5 flex-row align-items-center">
                        <img class="post-img img-fluid w-50 h-25" src="@ViewData["FeaturedImage"]" alt="Featured Post Image" />
                        <div class="card-body">
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@ViewData["PostId"]">
                                <h3 class="card-title">@ViewData["PostTitle"]</h3>
                                <p class="post-subtitle card-text">@ViewData["PostDescription"]</p>
                                <p class="post-meta card-text">Posted by Stephen Souvall on @ViewData["PostedDate"]</p>
                            </a>
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-primary text-center mt-5 d-flex align-items-center justify-content-center" asp-controller="Posts" asp-action="Details" asp-route-id="@ViewData["PostId"]">Read More...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="card mb-5 flex-row align-items-center">
                        <img class="post-img img-fluid w-50 h-25" src="@ViewData["FeaturedImage"]" alt="Featured Post Image" />
                        <div class="card-body">
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@ViewData["PostId"]">
                                <h3 class="card-title">@ViewData["PostTitle"]</h3>
                                <p class="post-subtitle card-text">@ViewData["PostDescription"]</p>
                                <p class="post-meta card-text">Posted by Stephen Souvall on @ViewData["PostedDate"]</p>
                            </a>
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-primary text-center mt-5 d-flex align-items-center justify-content-center" asp-controller="Posts" asp-action="Details" asp-route-id="@ViewData["PostId"]">Read More...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="card mb-5 flex-row align-items-center">
                        <img class="post-img img-fluid w-50 h-25" src="@ViewData["FeaturedImage"]" alt="Featured Post Image" />
                        <div class="card-body">
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@ViewData["PostId"]">
                                <h3 class="card-title">@ViewData["PostTitle"]</h3>
                                <p class="post-subtitle card-text">@ViewData["PostDescription"]</p>
                                <p class="post-meta card-text">Posted by Stephen Souvall on @ViewData["PostedDate"]</p>
                            </a>
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-primary text-center mt-5 d-flex align-items-center justify-content-center" asp-controller="Posts" asp-action="Details" asp-route-id="@ViewData["PostId"]">Read More...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <hr />

        <div class="text-center mb-5">
            <h3 class="mb-3">CATEGORIES</h3>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary text-decoration-none" asp-controller="Blogs" asp-action="Create">Create New <i class="fas fa-plus"></i></a>
            }
        </div>
        <div class="row">
            <!--Model is the IEnumerable and blog is the instance of Model-->
            @foreach (var blog in Model)
            {
                <div class="post-preview col-lg-4 col-md-6 col-sm-12">
                    <div class="card mb-5">
                        <img class="post-img img-fluid" src="@_blogImageService.DecodeImage(blog.ImageData, blog.ContentType)" alt="post image" />
                        <div class="card-body">
                            <a asp-controller="Posts" asp-action="BlogPostIndex" asp-route-id="@blog.Id">
                                <h3 class="card-title">@blog.Name</h3>
                                <p class="post-subtitle card-text">@blog.Description</p>
                                <p class="post-meta card-text">Posted by Stephen Souvall on @blog.Created.ToString("MMM dd, yyyy")</p>
                            </a>
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-primary text-center mt-5 d-flex align-items-center justify-content-center" asp-controller="Posts" asp-action="BlogPostIndex" asp-route-id="@blog.Id">View Blog</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
            }
        </div>
        <!-- Pager-->
        <div class="mt-5 mr-5 clearfix float-right"><a class="btn btn-primary ml-3" href="#!">Older Posts →</a></div>
    </div>
</div>
