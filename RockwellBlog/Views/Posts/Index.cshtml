@model IEnumerable<RockwellBlog.Models.Post>
@using RockwellBlog.Services
@inject IBlogImageService _blogImageService
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <!--Model is the IEnumerable and blog is the instance of Model-->
        @foreach (var post in Model)
        {
            <div class="post-preview">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <img src="@_blogImageService.DecodeImage(post.ImageData, post.ContentType)" alt="post image" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-primary mt-3" asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id">Read Post</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id">
                            <h2 class="post-title">@post.Title</h2>
                            <h3 class="post-subtitle">@post.Abstract</h3>
                        </a>
                        <p class="post-meta">
                            <!--use .ToString("MMM dd, yyyy") to format date-->
                            Posted by Stephen Souvall on @post.Created.ToString("MMM dd, yyyy")
                        </p>
                    </div>
                </div>
            </div>
            <hr />
        }
        <!-- Pager-->
        <div class="clearfix float-right"><a class="btn btn-primary ml-3" href="#!">Older Posts →</a></div>
    </div>
</div>