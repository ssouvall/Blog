@using RockwellBlog.Services
@inject IBlogImageService _fileService
@model IEnumerable<Post>

@{
    ViewData["Title"] = "Landing Page";
}

<!-- Main Content-->
<div class="row">
    <div class="col-lg-12 col-md-10 mx-auto">
        <div class="row">
            <!--Model is the IEnumerable and blog is the instance of Model-->
            @foreach (var post in Model)
            {
                <div class="post-preview col-lg-4 col-md-6 col-sm-12">
                    <div class="card mb-5" style="width: 18rem;">
                        <img class="post-img img-fluid" src="@_fileService.DecodeImage(post.ImageData, post.ContentType)" alt="post image" />
                        <div class="card-body">
                            <a asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="post-subtitle card-text">@post.Abstract</p>
                                <p class="post-meta card-text">Posted by Stephen Souvall on @post.Created.ToString("MMM dd, yyyy")</p>
                            </a>
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-primary mt-5 ml-5" asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug">Read Post</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
            }
        </div>
        <!-- Pager-->
        <div class="mt-5 mr-5 clearfix float-right"><a class="btn btn-primary ml-3" href="#!">Older Posts →</a></div>
    </div>
</div>