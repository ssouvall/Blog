@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using RockwellBlog.Services
@using System.Text.RegularExpressions
@inject IBlogImageService _fileService
@model IPagedList<Post>

@{
    ViewData["Title"] = "Landing Page";
}

<!-- Main Content-->

<div class="text-left">
    <a class="btn-sm btn-primary text-decoration-none rounded mr-3" asp-controller="Home" asp-action="Index">Home <i class="fas fa-home"></i></a>
    @if (User.IsInRole("Administrator"))
    {
        <a class="btn-sm btn-primary text-decoration-none rounded mr-3" asp-controller="Posts" asp-action="Create">New Post <i class="fas fa-plus"></i></a>
        <a class="btn-sm btn-primary text-decoration-none rounded" asp-controller="Blogs" asp-action="Create">New Category <i class="fas fa-palette"></i></a>
        @foreach (var item in Model)
        {
            <a class="btn-sm btn-secondary text-decoration-none ml-auto float-right rounded" asp-controller="Blogs" asp-action="Edit" asp-route-id="@item.BlogId">Edit <i class="fas fa-edit"></i></a>
            <a class="btn-sm btn-danger text-decoration-none ml-auto float-right rounded mr-3" type="button" data-toggle="modal" data-target="#deleteCatModal" asp-controller="Blogs" asp-action="Delete" asp-route-id="@item.BlogId">Delete <i class="fas fa-trash-alt"></i></a>
            <!-- Delete Modal -->
            <div class="modal fade" id="deleteCatModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this category?</p>
                        </div>
                        <div class="modal-footer">
                            <form asp-controller="Blogs" asp-action="Delete" asp-route-id="@item.BlogId">
                                <input type="hidden" asp-for="@item.BlogId" />
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            if (item.BlogId == item.BlogId)
            {
                break;
            }
        }

    }
</div>
<hr />
<div class="row">
    <!--Model is the IEnumerable and blog is the instance of Model-->
    @foreach (var post in Model)
    {
        <div class="text-center border shadow p-3">
            <div class="row">
                <div class="col-lg-6">
                    <img src="@_fileService.DecodeImage(post.ImageData, post.ContentType)" class="d-block w-100 img-fluid p-3 featured-img" alt="featured post image">
                </div>
                <div class="col-lg-6">
                    <h3>@post.Title</h3>
                    @{
                        string text = post.Content;
                        text = @Html.Raw(text).ToString();
                        string replaced = Regex.Replace(text, @"<[^>]*>", "").Substring(0, 200);
                    }

                    <p class="text-left pl-3 pr-3">@replaced  ...</p>
                    <small class="post-meta card-text mb-5">Posted by Stephen Souvall on @post.Created.ToString("MMM dd, yyyy")</small>
                    <a asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug" class="btn btn-primary btn-block rounded mt-3">Read Post</a>
                </div>
            </div>
        </div>

        <hr />
    }
</div>
<div class="row">
    <div class="col h3">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    </div>
</div>

<div class="row">
    <div class="col">
        @Html.PagedListPager(Model, page => Url.Action("BlogPostIndex", new { id = @Model.FirstOrDefault()?.BlogId, page = page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        }

      )
    </div>
</div>

